<Page loaded="pageLoaded">
    <ActionBar title="Groceries Stores"></ActionBar>
    <FlexboxLayout>
        <StackLayout class="form">
            <Image src="~/images/logo.png" />
            <TextField text="{{email}}" hint="Email Address" keyboardType="email" autocorrect="false" autocapitalizationType="none" class="input input-border" />
            <TextField text="{{pass}}" hint="Password" secure="true" class="input input-border" />
            <Button text="Sign in" class="btn btn-primary" tap="{{Signin}}" />
            <Button text="Sign up for Groceries" tap="{{registerAction}}" />
        </StackLayout>
    </FlexboxLayout>
</Page>